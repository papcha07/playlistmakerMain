<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name = "LinearLayoutBackground">
        <item name ="android:background">@color/background</item>
    </style>

    <style name="SettingsBackground">
        <item name="android:background">@color/white</item>
    </style>

    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/title_size_22px</item>
        <item name="cornerRadius">16dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/black</item>
        <item name = "fontFamily">@font/ys_text_medium</item>
        <item name="elevation">40dp</item>
    </style>

    <style name="TextStyleOptions">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/title_size_16px</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:padding">@dimen/padding_name</item>
        <item name="android:paddingStart">@dimen/title_size_16px</item>
        <item name="android:fontFamily">@font/ys_text_regular</item>
    </style>

    <style name="ImageOptionsStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">20dp</item>
    </style>


    <style name = "SearchEditTextStyle">
        <item name = "android:layout_width">match_parent</item>
        <item name = "android:layout_height">wrap_content</item>
        <item name="android:drawableStart">@drawable/search</item>
        <item name="android:background">@drawable/background_search</item>
        <item name="android:textColorHint">@color/text_grey</item>
        <item name = "android:fontFamily">@font/ys_text_regular</item>
        <item name="android:textSize">16sp</item>
        <item name = "drawableTint">@color/text_grey</item>
        <item name="android:layout_gravity">start|center_vertical</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:hint">@string/search</item>
        <item name="android:inputType">text</item>
        <item name="maxLines">1</item>
        <item name="android:padding">8dp</item>
        <item name = "android:textCursorDrawable">@drawable/cursor_blue_color</item>
        <item name = "android:textColor">@color/black</item>
    </style>

    <style name = "CloseButtonEditText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">end|center_vertical</item>
        <item name ="android:padding">10dp</item>
        <item name = "android:src">@drawable/close_button</item>
    </style>

    <style name = "trackViewTitleStyle">
        <item name = "android:layout_width">wrap_content</item>
        <item name = "android:layout_height">wrap_content</item>
        <item name = "android:gravity">center|center_horizontal</item>
        <item name = "android:layout_marginTop">14dp</item>
        <item name = "android:layout_marginLeft">66dp</item>
        <item name = "android:layout_marginRight">44dp</item>
        <item name = "android:fontFamily">font/ys_text_regular</item>
        <item name = "android:textSize">@dimen/title_size_16px</item>
        <item name = "android:textColor">@color/settingText</item>
        <item name = "android:backgroundTint">@color/white</item>
    </style>

    <style name = "trackViewGroupNameStyle">
        <item name = "android:layout_width">wrap_content</item>
        <item name = "android:layout_height">wrap_content</item>
        <item name = "android:fontFamily">font/ys_text_regular</item>
        <item name = "android:textSize">11sp</item>
        <item name = "android:textColor">@color/group_time_viewcolor</item>
    </style>


    <style name="trackViewPointImageStyle">
        <item name = "android:layout_width">wrap_content</item>
        <item name = "android:layout_height">wrap_content</item>
        <item name = "android:src">@drawable/point</item>
        <item name = "android:layout_gravity">center</item>
        <item name = "android:colorBackground">@color/settingText</item>
        <item name = "android:layout_margin">5dp</item>
    </style>

    <style name="trackViewTimeStyle">
        <item name = "android:layout_width">wrap_content</item>
        <item name = "android:layout_height">wrap_content</item>
        <item name = "android:fontFamily">font/ys_text_regular</item>
        <item name = "android:textSize">11sp</item>
        <item name = "android:textColor">@color/group_time_viewcolor</item>
    </style>


    <style name="trackViewArrowStyle">
        <item name = "android:layout_width">8dp</item>
        <item name = "android:layout_height">14dp</item>
        <item name = "android:src">@drawable/track_arrow</item>
        <item name = "android:layout_marginRight">20dp</item>
        <item name = "android:layout_gravity">end</item>
        <item name="android:layout_marginVertical">24dp</item>
        <item name="tint">@color/settingText</item>
    </style>

    <style name="trackViewImageStyle">
        <item name = "android:layout_width">45dp</item>
        <item name = "android:layout_height">45dp</item>
        <item name = "android:layout_marginTop">8dp</item>
        <item name = "android:layout_marginBottom">8dp</item>
        <item name = "android:layout_marginLeft">13dp</item>
    </style>


    <style name="trackViewCardStyle">
        <item name = "android:layout_width">match_parent</item>
        <item name = "android:layout_height">wrap_content</item>
        <item name = "android:orientation">horizontal</item>
    </style>

    <style name="recyclerViewSearchStyle">
        <item name = "android:layout_width">wrap_content</item>
        <item name = "android:layout_height">wrap_content</item>
        <item name = "android:orientation">vertical</item>
        <item name = "android:layout_marginTop">16dp</item>
        <item name = "background">@color/backgroundSearch</item>
    </style>

    <style name="frameLayoutErrorsStyle">
        <item name = "android:layout_width">match_parent</item>
        <item name = "android:layout_height">match_parent</item>
        <item name = "android:layout_marginHorizontal">24dp</item>
    </style>
    
    <style name="errorTypeSearchImageStyle">
        <item name = "android:layout_width">wrap_content</item>
        <item name = "android:layout_height">wrap_content</item>
        <item name = "android:layout_gravity">center_horizontal</item>
        <item name = "android:layout_marginTop">102dp</item>
    </style>

    <style name="errorTypeSearchTextViewStyle">
        <item name = "android:layout_width">wrap_content</item>
        <item name = "android:layout_height">wrap_content</item>
        <item name = "android:fontFamily">font/ys_text_medium</item>
        <item name = "android:textSize">19sp</item>
        <item name = "android:textColor">@color/black</item>
        <item name = "android:layout_gravity">center_horizontal</item>
        <item name = "android:textAlignment">center</item>
        <item name = "android:layout_marginTop">238dp</item>
    </style>
    
    <style name="refreshButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">350dp</item>
        <item name="android:text">Обновить</item>
        <item name="android:fontFamily">@font/ys_text_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name = "android:textColor">@color/white</item>
        <item name="cornerRadius">54dp</item>
        <item name="backgroundTint">@color/black</item>

    </style>

    <style name="SwitchStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">20dp</item>
        <item name="android:fontFamily">@font/ys_text_regular</item>
        <item name="android:textSize">@dimen/title_size_16px</item>
    </style>

    <style name="historySearchTextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:textSize">19sp</item>
        <item name="android:fontFamily">@font/ys_text_medium</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="historyRecyclerViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="clearHistoryButtonStyle">
        <item name="android:layout_width">148dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/clear_history_button</item>
        <item name="android:fontFamily">@font/ys_text_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="backButtonAudioStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:background">@null</item>
    </style>

    <style name="posterStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>

    <style name="trackNameStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:textSize">22sp</item>
        <item name="android:fontFamily">@font/ys_text_medium</item>
        <item name="android:textColor">@color/theme_color</item>
        <item name="android:layout_marginTop">26dp</item>
    </style>

    <style name="groupTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/theme_color</item>
        <item name="android:fontFamily">@font/ys_text_medium</item>
        <item name="android:layout_marginTop">12dp</item>
    </style>

    <style name="plusButtonStyle">
        <item name="android:src">@drawable/add_track_button</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@null</item>
        <item name="android:layout_marginTop">54dp</item>

    </style>

    <style name="playButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@null</item>
        <item name="android:layout_marginTop">28dp</item>
        <item name="android:layout_marginHorizontal">55dp</item>
    </style>

    <style name="likeButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">54dp</item>
    </style>

    <style name="currentTimeStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/theme_color</item>
        <item name="android:fontFamily">@font/ys_text_medium</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="constraintBckgroundStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name = "background">@color/white</item>
    </style>


    <style name="TabTextAppearance" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">@font/ys_text_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="color">@color/theme_color</item>
    </style>

    <style name="bottom_nav_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>