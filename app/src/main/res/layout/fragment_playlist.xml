<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/backgroundSearch"
    >

    <Button
        android:id="@+id/createButtonId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/refreshButtonStyle"
        android:text="Новый плейлист"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
    </Button>

    <ImageView
        android:id="@+id/iconId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/music_no_found"
        app:layout_constraintTop_toBottomOf="@id/createButtonId"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="46dp">
    </ImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Вы не создали\nни одного плейлиста"
        app:layout_constraintTop_toBottomOf="@id/iconId"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="19sp"
        android:fontFamily="@font/ys_text_medium"
        android:textColor="@color/theme_color"
        android:textFontWeight="500"
        android:layout_marginTop="16dp"
        >
    </TextView>





</androidx.constraintlayout.widget.ConstraintLayout>